{
  "singleQuote": true,
  "trailingComma": "all",
  "importOrder": [
    "^(?:@nestjs|@casl|@angular)/(.*)$",
    "^(?:@root)/(.*)$",
    "^(?:@enums|@interfaces|@entities|@dtos|@auth|@decorators|@transformers|@shared|@environment|@layout|@utils|@adapters|@gateways)/(.*)$",
    "^(?:@modules)/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderParserPlugins": ["typescript", "decorators-legacy"]
}
